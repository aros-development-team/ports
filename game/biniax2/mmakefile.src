include $(SRCDIR)/config/aros-contrib.cfg

#MM- ports-game : ports-game-biniax2

#MM  ports-game-biniax2 : \
#MM  includes \
#MM  linklibs \
#MM  contrib-sdl \
#MM  contrib-sdl-sdl-image \
#MM  contrib-sdl-sdl-mixer \
